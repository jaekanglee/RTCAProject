<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    app:startDestination="@+id/fragment_splash">

    <fragment
        android:id="@+id/fragment_splash"
        android:name="com.ppizil.rtcaapp.splash.SplashFragment"
        tools:layout="@layout/fragment_splash">

        <action
            android:id="@+id/action_fragment_splash_to_fragment_main"
            app:destination="@id/fragment_main" />
    </fragment>

    <fragment
        android:id="@+id/fragment_main"
        android:name="com.ppizil.rtcaapp.main.MainFragment"
        tools:layout="@layout/fragment_main">

        <action
            android:id="@+id/action_fragment_main_to_fragment_saving"
            app:destination="@id/fragment_saving" />
    </fragment>

    <fragment
        android:id="@+id/fragment_saving"
        android:name="com.ppizil.rtcaapp.saving.SavingFragment"
        tools:layout="@layout/fragment_saving" />

</navigation>